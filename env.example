# Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control - it contains sensitive information

# ============================================
# Authentication Settings
# ============================================
# Enable authentication for the Gradio interface
# Set to "true" to enable, "false" to disable
AUTH_ENABLED=false

# Username and password for basic authentication
# Only used if AUTH_ENABLED=true
# IMPORTANT: Use strong passwords in production!
AUTH_USERNAME=admin
AUTH_PASSWORD=change_me_to_strong_password

# ============================================
# Server Configuration
# ============================================
# Server hostname (use 127.0.0.1 for localhost only, 0.0.0.0 for all interfaces)
SERVER_NAME=127.0.0.1

# Server port
SERVER_PORT=7860

# Enable Gradio share link (creates public URL)
# Set to "true" to enable, "false" to disable
SHARE=false

# ============================================
# Storage Paths
# ============================================
# Directory where uploaded documents are stored
DOCUMENTS_STORAGE_DIR=./uploaded_documents

# Directory where knowledge base data is stored
KNOWLEDGE_BASE_DIR=./knowledge_base

# ============================================
# API Keys (Optional - for future AI services)
# ============================================
# OpenAI API key (if using OpenAI services)
# OPENAI_API_KEY=sk-...

# Anthropic API key (if using Claude services)
# ANTHROPIC_API_KEY=sk-ant-...

# Custom AI service API key
# CUSTOM_AI_API_KEY=your_api_key_here

# Custom AI service base URL
# CUSTOM_AI_BASE_URL=https://api.example.com/v1

# ============================================
# Security Settings
# ============================================
# Secret key for session management (generate a random string)
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# SECRET_KEY=your_secret_key_here

# Session timeout in seconds (default: 3600 = 1 hour)
SESSION_TIMEOUT=3600

# ============================================
# Google Drive Integration (Optional)
# ============================================
# Enable Google Drive integration
# Set to "true" to enable, "false" to disable
GOOGLE_DRIVE_ENABLED=false

# Path to Google OAuth2 credentials JSON file
# Download from: https://console.cloud.google.com/apis/credentials
# Create OAuth 2.0 Client ID credentials and download as JSON
# GOOGLE_DRIVE_CREDENTIALS_FILE=./google_drive_credentials.json

# Path to store OAuth2 token (will be created automatically after first auth)
GOOGLE_DRIVE_TOKEN_FILE=./google_drive_token.json

# Optional: Specific Google Drive folder ID to sync
# Leave empty to access all files you have permission to view
# To find folder ID: Open folder in Google Drive, URL contains folder ID
# GOOGLE_DRIVE_FOLDER_ID=your_folder_id_here
